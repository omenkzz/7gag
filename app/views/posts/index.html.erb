<%= form_for :post, :html => { :multipart => true } do |f| %>
    <%# f.hidden_field :user %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :meme %><br>
      <%= f.file_field :meme %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body,  :cols => 50, :rows => 10 %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>
