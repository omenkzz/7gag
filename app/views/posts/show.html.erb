<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><strong><%= @post.title %></strong>
    </h3>
  </div>
  <div class="panel-body" style="overflow: auto;">
    <%= image_tag @post.meme.url %>

  </div>
  <div class="panel-footer"> <%= social_share_button_tag(@post.title) %></div>
</div>

<%= render partial: "comments/form" %>


<ul class="nav nav-tabs" role="tablist" id="myTab">
  <li class="active"><a href="#home" role="tab" data-toggle="tab">Comments</a></li>
  <li><a href="#profile" role="tab" data-toggle="tab">FB comments</a></li>

</ul>

<div class="tab-content">
  <div class="tab-pane active" id="home">
    <div id="comments">
      <%= render partial: 'comments/comment', :collection => @old_comments, :as => :comment %>
    </div>
  </div>
  <div class="tab-pane" id="profile">
    <div id="fb-root"></div>
    <div class="fb-comments"></div>
  </div>

</div>

<script>
    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s);
        js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=1397110283902092";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

    $(function () {
        $('#myTab a:first').tab('show')
    })
</script>